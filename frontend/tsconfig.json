{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
		],
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"@Models/*": [
				"../../models/*"
			],
			"@Utils/*": [
				"utils/*"
			]
		},
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"include": [
		"./src",
		"./mock",
		"./utils"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
